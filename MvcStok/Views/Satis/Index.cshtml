@using MvcStok.Models.Entity
@model List<tblSatis>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>ÜRÜN</th>
        <th>PERSONEL</th>
        <th>MÜŞTERİ</th>
        <th>FİYAT</th>
        <th>TARİH</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td>@x.tblUrunler.ad</td>
            <td>@x.tblPersonel.ad @x.tblPersonel.soyad</td>
            <td>@x.tblMusteri.ad @x.tblMusteri.soyad</td>
            <td>@x.fiyat</td>
            <td>@x.tarih</td>
        </tr>

    }

</table>
<a href="/Satis/YeniSatis/" class="btn btn-primary">Yeni Satış Ekle</a>


